<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jamesmorrisstudios.appbaselibrary">

    <!--
        App Base handler
    -->
    <application
        android:name="com.jamesmorrisstudios.appbaselibrary.app.AppBase"
        android:allowBackup="true">

        <!--
            Main Launcher activity
        -->
        <activity
            android:name="com.jamesmorrisstudios.appbaselibrary.activities.CustomFilePickerActivity"
            android:label="@string/app_name"
            android:theme="@style/FilePickerThemeToolLight">
        </activity>

        <!--
            Launcher/Restart activity. Can launch the app to any specific page.
            Currently does not support managing every parent class.
        -->
        <activity
            android:name=".activities.AppLauncherActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:theme="@style/AppThemeNoBackground"
            android:label="@string/app_name">
        </activity>

    </application>

</manifest>
