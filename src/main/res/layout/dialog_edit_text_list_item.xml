<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <EditText
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/delete1"
        android:gravity="center_horizontal"
        android:imeOptions="actionNone"
        android:inputType="text|textAutoCorrect|textMultiLine|textCapSentences"
        android:singleLine="false" />

    <com.jamesmorrisstudios.appbaselibrary.controls.tint.TintedImageView
        android:id="@+id/delete1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:background="@null"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_delete_white_24dp"
        android:tint="?attr/colorIconTint" />

</RelativeLayout>