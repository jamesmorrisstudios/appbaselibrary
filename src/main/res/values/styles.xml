<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Set primary coloring in the app -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="colorControlNormal">@color/primaryDark</item>

        <item name="android:textSelectHandle">@drawable/text_select_handle_middle_mtrl</item>
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_mtrl</item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_mtrl</item>

        <item name="android:editTextColor">@color/textDarkMain</item>

        <item name="android:textColorPrimary">@color/textDarkMain</item>
        <item name="android:textColorSecondary">@color/textDarkSecondary</item>
        <item name="android:textColorTertiary">@color/textDarkDisabled</item>

        <item name="android:textColorPrimaryInverse">@color/textLightMain</item>
        <item name="android:textColorSecondaryInverse">@color/textLightSecondary</item>
        <item name="android:textColorTertiaryInverse">@color/textLightDisabled</item>

        <item name="toolbarStyleSet">@style/toolbarLight</item>

        <item name="cardViewStyle">@style/CardView.Light</item>

        <item name="alertDialogStyleSet">@style/alertDialog</item>

    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Set primary coloring in the app -->
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/darkPrimary</item>
        <item name="colorControlNormal">@color/darkPrimaryDark</item>

        <item name="android:textSelectHandle">@drawable/text_select_handle_middle_mtrl</item>
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_mtrl</item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_mtrl</item>


        <item name="android:editTextColor">@color/textLightMain</item>

        <item name="android:textColorPrimary">@color/textLightMain</item>
        <item name="android:textColorSecondary">@color/textLightSecondary</item>
        <item name="android:textColorTertiary">@color/textLightDisabled</item>

        <item name="android:textColorPrimaryInverse">@color/textDarkMain</item>
        <item name="android:textColorSecondaryInverse">@color/textDarkSecondary</item>
        <item name="android:textColorTertiaryInverse">@color/textDarkDisabled</item>

        <item name="toolbarStyleSet">@style/toolbarDark</item>

        <item name="cardViewStyle">@style/cardStyleDark</item>

        <item name="alertDialogStyleSet">@style/alertDialogDark</item>

    </style>

    <!-- Toolbars -->
    <style name="toolbarLight" parent="ThemeOverlay.AppCompat">
        <item name="colorControlNormal">@android:color/white</item>

        <!-- Title text -->
        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <!-- Menu text-->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@android:color/black</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <!-- background of the  -->
        <!--<item name="android:background">@color/primary</item>-->
    </style>

    <style name="toolbarDark" parent="ThemeOverlay.AppCompat">
        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="colorControlHighlight">@color/copy_ripple_material_light</item>
        <item name="colorButtonNormal">@color/copy_button_material_light</item>
        <item name="colorSwitchThumbNormal">@color/copy_switch_thumb_normal_material_light</item>


        <!-- Title text -->
        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@android:color/white</item>

        <!-- Menu text-->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>

        <!-- background -->
        <!--<item name="android:background">@color/accent</item>-->
    </style>

    <style name="toolbarPopupLight" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="toolbarPopupDark" parent="ThemeOverlay.AppCompat">

    </style>


    <!-- Card View -->
    <style name="cardStyleLight" parent="CardView">

    </style>

    <style name="cardStyleDark" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/cardDark</item>

    </style>

    <!-- You can also inherit from NNF_BaseTheme.Light -->
    <style name="FilePickerTheme" parent="NNF_BaseTheme.Light">
        <!-- Set these to match your theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Need to set this also to style create folder dialog -->
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>

        <!-- If you want to set a specific toolbar theme, do it here -->
        <item name="nnf_toolbarTheme">@style/toolbarLight</item>
    </style>

    <style name="FilePickerAlertDialogTheme" parent="@style/alertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FilePickerThemeDark" parent="NNF_BaseTheme">
        <!-- Set these to match your theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Need to set this also to style create folder dialog -->
        <item name="alertDialogTheme">@style/FilePickerAlertDialogThemeDark</item>

        <!-- If you want to set a specific toolbar theme, do it here -->
        <item name="nnf_toolbarTheme">@style/toolbarDark</item>
    </style>

    <style name="FilePickerAlertDialogThemeDark" parent="@style/alertDialogDark">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="BlackDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <!-- Alert Dialogs -->
    <style name="alertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/accent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/textDarkMain</item>
        <!-- Used for the title and text -->
        <item name="android:textColorSecondary">@color/textDarkSecondary</item>
    </style>

    <style name="alertDialogDark" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/accent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/textLightMain</item>
        <!-- Used for the title and text -->
        <item name="android:textColorSecondary">@color/textLightSecondary</item>
    </style>


    <style name="alertDialogTransparent" parent="alertDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="NotificationDarkText" parent="android:TextAppearance.StatusBar.EventContent">
        <item name="android:textColor">@color/secondary_text_default_material_dark</item>
    </style>

    <style name="NotificationDarkTitle" parent="android:TextAppearance.StatusBar.EventContent.Title">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
    </style>

    <style name="NotificationLightText" parent="android:TextAppearance.StatusBar.EventContent">
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
    </style>

    <style name="NotificationLightTitle" parent="android:TextAppearance.StatusBar.EventContent.Title">
        <item name="android:textColor">@color/primary_text_default_material_light</item>
    </style>

</resources>