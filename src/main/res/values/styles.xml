<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeNoBackground" parent="Theme.AppCompat.Light">
        <!-- Disable the action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Remove the background -->
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light">
        <!-- Disable the action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Set the background to the splash screen -->
        <item name="android:windowBackground">@layout/splash_screen</item>
    </style>

    <!-- application themeBackground. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <!-- Disable the action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Card Views -->
        <item name="cardViewStyle">@style/CardView.Light</item>
        <!-- Background color -->
        <item name="colorBackground">@color/backgroundLight</item>
        <!-- Icon Tint -->
        <item name="colorIconTint">@color/tintColorLight</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textDarkMain</item>
        <item name="android:textColorSecondary">@color/textDarkSecondary</item>
        <item name="android:textColorTertiary">@color/textDarkDisabled</item>
        <item name="android:textColorPrimaryInverse">@color/textLightMain</item>
        <item name="android:textColorSecondaryInverse">@color/textLightSecondary</item>
        <item name="android:textColorTertiaryInverse">@color/textLightDisabled</item>
    </style>

    <!-- Dark application themeBackground -->
    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Disable the action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Card Views -->
        <item name="cardViewStyle">@style/cardStyleDark</item>
        <!-- Background color -->
        <item name="colorBackground">@color/backgroundDark</item>
        <!-- Icon Tint -->
        <item name="colorIconTint">@color/tintColorDark</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textLightMain</item>
        <item name="android:textColorSecondary">@color/textLightSecondary</item>
        <item name="android:textColorTertiary">@color/textLightDisabled</item>
        <item name="android:textColorPrimaryInverse">@color/textDarkMain</item>
        <item name="android:textColorSecondaryInverse">@color/textDarkSecondary</item>
        <item name="android:textColorTertiaryInverse">@color/textDarkDisabled</item>
    </style>

    <!-- Dialog -->
    <style name="dialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Card Views -->
        <item name="cardViewStyle">@style/CardView.Light</item>
        <!-- Background color -->
        <item name="colorBackground">@color/backgroundLight</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textDarkMain</item>
        <item name="android:textColorSecondary">@color/textDarkSecondary</item>
        <item name="android:textColorTertiary">@color/textDarkDisabled</item>
        <item name="android:textColorPrimaryInverse">@color/textLightMain</item>
        <item name="android:textColorSecondaryInverse">@color/textLightSecondary</item>
        <item name="android:textColorTertiaryInverse">@color/textLightDisabled</item>
    </style>

    <style name="dialogThemeDark" parent="Theme.AppCompat.Dialog">

    </style>

    <!-- Toolbar -->
    <style name="baseToolbarLight" parent="ThemeOverlay.AppCompat">
        <item name="colorControlNormal">@color/textLightMain</item>
        <!-- Title text -->
        <item name="android:textColorPrimary">@color/textLightMain</item>
        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@color/textLightMain</item>
        <!-- Menu text-->
        <item name="actionMenuTextColor">@color/textLightMain</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@color/textDarkMain</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <!-- dark toolbar -->
    <style name="baseToolbarDark" parent="ThemeOverlay.AppCompat">
        <item name="colorControlNormal">@color/textLightMain</item>
        <item name="colorControlHighlight">@color/textDarkDivider</item>
        <item name="colorButtonNormal">@color/textLightMain</item>
        <item name="colorSwitchThumbNormal">@color/textDarkDivider</item>
        <!-- Title text -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <!-- Menu text-->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <!-- Toolbar -->
    <style name="baseToolbarLightDarkText" parent="ThemeOverlay.AppCompat">
        <item name="colorControlNormal">@color/textDarkMain</item>
        <!-- Title text -->
        <item name="android:textColorPrimary">@color/textDarkMain</item>
        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@color/textLightMain</item>
        <!-- Menu text-->
        <item name="actionMenuTextColor">@color/textDarkMain</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@color/textLightMain</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/BlackDrawerIconStyle</item>
    </style>

    <!-- dark toolbar -->
    <style name="baseToolbarDarkDarkText" parent="ThemeOverlay.AppCompat">
        <item name="colorControlNormal">@color/textDarkMain</item>
        <item name="colorControlHighlight">@color/textDarkDivider</item>
        <item name="colorButtonNormal">@color/textDarkMain</item>
        <item name="colorSwitchThumbNormal">@color/textDarkDivider</item>
        <!-- Title text -->
        <item name="android:textColorPrimary">@color/textDarkMain</item>
        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@color/textDarkMain</item>
        <!-- Menu text-->
        <item name="actionMenuTextColor">@color/textDarkMain</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@color/textDarkMain</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/BlackDrawerIconStyle</item>
    </style>

    <!-- Toolbar Popup -->
    <style name="toolbarPopupLight" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <!-- Dark Toolbar Popup -->
    <style name="toolbarPopupDark" parent="ThemeOverlay.AppCompat">

    </style>

    <!-- Toolbar Popup -->
    <style name="toolbarPopupLightDarkText" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <!-- Dark Toolbar Popup -->
    <style name="toolbarPopupDarkDarkText" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/textLightMain</item>
    </style>

    <!-- TabLayout Popup -->
    <style name="baseTabLayoutLight" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <!-- Dark TabLayout Popup -->
    <style name="baseTabLayoutDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <!-- TabLayout Popup -->
    <style name="baseTabLayoutLightDarkText" parent="ThemeOverlay.AppCompat.ActionBar">

    </style>

    <!-- Dark TabLayout Popup -->
    <style name="baseTabLayoutDarkDarkText" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <!-- Card View -->
    <style name="cardStyleLight" parent="CardView">
        <!--<item name="cardBackgroundColor">@color/cardBackgroundLight</item>-->
    </style>

    <!-- Dark Card View -->
    <style name="cardStyleDark" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/cardBackgroundDark</item>
    </style>

    <!-- File Picker -->
    <style name="FilePickerTheme" parent="NNF_BaseTheme.Light">
        <!-- Toolbar -->
        <item name="nnf_toolbarTheme">@style/toolbarLight</item>
    </style>

    <!-- Dark File Picker -->
    <style name="FilePickerThemeDark" parent="NNF_BaseTheme">
        <!-- Toolbar -->
        <item name="nnf_toolbarTheme">@style/toolbarDark</item>
    </style>

    <style name="NNF_BaseTheme" parent="Theme.AppCompat.Dialog">
        <!-- You can override this in your sub theme -->
        <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="nnf_separator_color">@color/nnf_dark_separator_color</item>

        <!-- These are important. Handled by toolbar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NNF_BaseTheme.Light" parent="Theme.AppCompat.Light.Dialog">
        <!-- You can override this in your sub theme -->
        <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="nnf_separator_color">@color/nnf_light_separator_color</item>

        <!-- These are important. Handled by toolbar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Drawer Style -->
    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/textLightMain</item>
    </style>

    <!-- Dark Drawer Style -->
    <style name="BlackDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/textDarkMain</item>
    </style>

    <!-- Alert Dialog -->
    <style name="baseAlertDialogLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/textDarkMain</item>
        <!-- Used for the title and text -->
        <item name="android:textColorSecondary">@color/textDarkSecondary</item>
    </style>

    <!-- Dark Alert Dialog -->
    <style name="baseAlertDialogDark" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/textLightMain</item>
        <!-- Used for the title and text -->
        <item name="android:textColorSecondary">@color/textLightSecondary</item>
    </style>

    <!-- Notification Styles dark secondary -->
    <style name="NotificationDarkText" parent="android:TextAppearance.StatusBar.EventContent">
        <item name="android:textColor">@color/textLightSecondary</item>
    </style>

    <!-- Notification Styles dark primary -->
    <style name="NotificationDarkTitle" parent="android:TextAppearance.StatusBar.EventContent.Title">
        <item name="android:textColor">@color/textLightMain</item>
    </style>

    <!-- Notification Styles light secondary -->
    <style name="NotificationLightText" parent="android:TextAppearance.StatusBar.EventContent">
        <item name="android:textColor">@color/textDarkSecondary</item>
    </style>

    <!-- Notification Styles light primary -->
    <style name="NotificationLightTitle" parent="android:TextAppearance.StatusBar.EventContent.Title">
        <item name="android:textColor">@color/textDarkMain</item>
    </style>

</resources>