<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set primary coloring in the app -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="colorControlNormal">@color/primaryDark</item>
        <!--
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="colorSwitchThumbNormal">@color/accent</item>
        -->

        <item name="android:textSelectHandle">@drawable/text_select_handle_middle_mtrl</item>
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_mtrl</item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_mtrl</item>

    </style>

    <style name="toolbarLight" parent="ThemeOverlay.AppCompat.Light">
        <!-- Title text -->
        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@android:color/white</item>

        <!-- Menu text-->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <!-- background of the  -->
        <!-- <item name="android:background">@color/color_primary</item> -->
    </style>

    <style name="toolbarDark" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/textDarkMain</item>
        <item name="colorPrimaryDark">@color/textDarkMain</item>
        <item name="colorButtonNormal">@color/textDarkMain</item>
        <item name="colorControlNormal">@color/textDarkMain</item>

        <!-- Title text -->
        <item name="android:textColorPrimary">@android:color/black</item>

        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@android:color/black</item>

        <!-- Menu text-->
        <item name="actionMenuTextColor">@android:color/black</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@android:color/black</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/BlackDrawerIconStyle</item>
        <!-- background -->
        <!-- <item name="android:background">@color/color_primary</item> -->
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="BlackDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="alertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/accent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/textDarkMain</item>
        <!-- Used for the title and text -->
        <item name="android:textColorSecondary">@color/textDarkSecondary</item>
        <!-- Used for the background -->
        <item name="android:background">@color/primaryLight</item>
    </style>


</resources>